package rename {

var map := {
    '*': 'star',
    '/': 'slash',
    '+': 'plus',
    '-': 'minus',
    '%': 'percent',
    '<': 'lt',
    '>': 'gt',
    '=': 'eq',
    '&': 'and',
    '|': 'bar',
    '^': 'hat',
    '\\': 'bslash',
    '~': 'tilde',
    '@': 'at'};

rename := \name ->
    '__' + name
        .split('')
        .map((., map))
        .join('_');

}